{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "@typescript-eslint/ban-ts-comment": 0, // go away... it's a feature
    "@typescript-eslint/ban-types": 0, // contradicts TypeScripts' declarations for decorators
    "prettier/prettier": [
      1,
      {
        "arrowParens": "always",
        "bracketSpacing": true,
        "jsxBracketSameLine": true,
        "printWidth": 100,
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "all",
        "useTabs": false
      }
    ]
  }
}
